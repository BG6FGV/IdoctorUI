<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xx.mapper.DiseaseMapper">

    <select id="all" resultType="com.xx.entity.Disease">
        SELECT * FROM tb_disease  limit #{pageNum},#{pageSize}
    </select>

    <select id="totel" resultType="int">
        SELECT count(*) FROM tb_disease
        <where>
            <if test="name!=''">
                and name LIKE "%${name}%"
            </if>
            <if test="buwei!=''">
                and buwei LIKE "%${buwei}%"
            </if>
            <if test="keshi!=''">
                and keshi LIKE "%${keshi}%"
            </if>
        </where>
    </select>

    <select id="getByIfLike" resultType="com.xx.entity.Disease">
        SELECT * FROM tb_disease
        <where>
            <if test="dis.id!=0">
                and id =#{dis.id}
            </if>
            <if test="dis.name!=''">
                and name LIKE "%${dis.name}%"
            </if>
            <if test="dis.buwei!=''">
                and buwei LIKE "%${dis.buwei}%"
            </if>
            <if test="dis.keshi!=''">
                and keshi LIKE "%${dis.keshi}%"
            </if>
        </where>
        LIMIT #{pageNum},#{pageSize}
    </select>

    <!-- 批量删除 -->
    <delete id="delete" parameterType="int[]">
        delete from tb_disease where id in
        <foreach collection="array" item="ids" index="no" open="("
                 separator="," close=")">
            #{ids}
        </foreach>
    </delete>

    <!--更新-->
    <update id="update"  parameterType="com.xx.entity.Disease">
        UPDATE tb_doctor
        <trim prefix="set" suffixOverrides=",">
            <if test="dis.name!=''">name=#{dis.name},</if>
            <if test="dis.buwei!=''">buwei=#{dis.buwei},</if>
            <if test="dis.keshi!=''">keshi=#{dis.keshi},</if>
            <if test="dis.yongyao!=''">yongyao=#{dis.yongyao},</if>
            <if test="dis.question!=''">question=#{dis.question},</if>
            <if test="dis.anwser!=''">anwser=#{dis.anwser},</if>
            <if test="dis.binyin!=''">binyin=#{dis.binyin},</if>
            <if test="dis.zhengzhuang!=''">zhengzhuang=#{dis.zhengzhuang},</if>
            <if test="dis.jiancha!=''">jiancha=#{dis.jiancha},</if>
            <if test="dis.yufang!=''">yufang=#{dis.yufang},</if>
            <if test="dis.zhiliao!=''">zhiliao=#{dis.zhiliao},</if>
            <if test="dis.jianbie!=''">jianbie=#{dis.jianbie},</if>
            <if test="dis.binfazheng!=''">binfazheng=#{dis.binfazheng},</if>
            <if test="dis.img!=''">img=#{dis.img},</if>
        </trim>
        WHERE id=#{dis.id}
    </update>
</mapper>