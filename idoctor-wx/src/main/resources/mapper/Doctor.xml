<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xx.mapper.DoctorMapper">

    <select id="getByIf" resultType="com.xx.entity.Doctor">
        SELECT * FROM tb_doctor
        <where>
            <if test="doctor.id!=0">
                and id =#{doctor.id}
            </if>
            <if test="doctor.hospital!=''">
                and to_pinyin(hospital)LIKE to_pinyin("%${doctor.hospital}%")
            </if>
            <if test="doctor.ks!=''">
                and ks LIKE "%${doctor.ks}%"
            </if>
            <if test="doctor.zc!=''">
                and zc LIKE "%${doctor.zc}%"
            </if>
            <if test="doctor.addr!=''">
                and addr LIKE "%${doctor.addr}%"
            </if>
        </where>
        LIMIT #{pageNum},#{pageSize}
    </select>

    <select id="getByHos" resultType="com.xx.entity.Doctor">
        SELECT * FROM tb_doctor where  hospital=#{hos}
    </select>

    <select id="totel" resultType="int">
        SELECT count(*) FROM tb_doctor
        <where>
            <if test="doctor.hospital!=''">
                and to_pinyin(hospital)LIKE to_pinyin("%${doctor.hospital}%")
            </if>
            <if test="doctor.ks!=''">
                and ks LIKE "%${doctor.ks}%"
            </if>
            <if test="doctor.zc!=''">
                and zc LIKE "%${doctor.zc}%"
            </if>
            <if test="doctor.addr!=''">
                and addr LIKE "%${doctor.addr}%"
            </if>
        </where>
    </select>

    <!-- 批量删除 -->
    <delete id="delete" parameterType="int[]">
        delete from tb_doctor where id in
        <foreach collection="array" item="ids" index="no" open="("
                 separator="," close=")">
            #{ids}
        </foreach>
    </delete>

    <!--更新-->
    <update id="update"  parameterType="com.xx.entity.Doctor">
        UPDATE tb_doctor
        <trim prefix="set" suffixOverrides=",">
            <if test="doc.name!=''">name=#{doc.name},</if>
            <if test="doc.zc!=''">zc=#{doc.zc},</if>
            <if test="doc.hospital!=''">hospital=#{doc.hospital},</if>
            <if test="doc.ks!=''">ks=#{doc.ks},</if>
            <if test="doc.jxzc!=''">jxzc=#{doc.jxzc},</if>
            <if test="doc.xzzc!=''">xzzc=#{doc.xzzc},</if>
            <if test="doc.xw!=''">xw=#{doc.xw},</if>
            <if test="doc.sc!=''">sc=#{doc.sc},</if>
            <if test="doc.introduction!=''">introduction=#{doc.introduction},</if>
            <if test="doc.honor!=''">honor=#{doc.honor},</if>
            <if test="doc.paper!=''">paper=#{doc.paper},</if>
            <if test="doc.url!=''">url=#{doc.url},</if>
            <if test="doc.tel!=''">tel=#{doc.tel},</if>
            <if test="doc.fax!=''">fax=#{doc.fax},</if>
            <if test="doc.zipcode!=''">zipcode=#{doc.zipcode},</if>
            <if test="doc.email!=''">email=#{doc.email},</if>
            <if test="doc.addr!=''">url=#{doc.addr},</if>
            <if test="doc.imgurl!=''">url=#{doc.imgurl},</if>
        </trim>
        WHERE id=#{doc.id}
    </update>

</mapper>