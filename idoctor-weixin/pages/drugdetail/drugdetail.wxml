<view class="WxComment">
  <WxComment tipOne=" " tipTwo="" submitBtnText="回复" articleID="{{article_id}}" contentLen='1' theme="light"></WxComment>
</view>
<view style='height: 95rpx;'></view>
<view class='footer'>
  <text class='freeTime' bindtap='freeTime'>空闲日历</text>
