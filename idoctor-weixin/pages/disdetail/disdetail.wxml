<!-- 头部 -->
<view class='header'>
  <image src="{{dis.img}}" />
  <view class='row row1'>
    <text class='name line-dec'>{{dis.name}}</text>
    <view class='hot'>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
    </view>
  </view>
  <view class='row row2'>
    <text>{{dis.buwei1}}</text>
    <text class='gold'>{{dis.buwei}}</text>
  </view>
  <view class='row row3'>
    <text>{{dis.keshi1}}</text>
  </view>
  <view class='row row4'>
    <text>{{doc.jxzc}}</text>
    <text class='price'>{{dis.keshi}}</text>
  </view>
</view>
