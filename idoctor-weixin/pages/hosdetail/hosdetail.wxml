<!-- 头部 -->
<view class='header'>
  <image src="{{hos.img}}" />
  <view class='row row1'>
    <text class='name line-dec'>{{hos.hosName}}</text>
    <view class='hot'>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
    </view>
  </view>
  <view class='row row2'>
    <text>{{hos.type}}</text>
    <text class='gold'>{{hos.level}}</text>
  </view>
  <view class='row row3'>
    <text>{{hos.isAuth}}({{hos.isinsurance}})</text>
  </view>
  <view class='row row4'>
    <text>{{hos.manage}}</text>
    <text class='price'>{{hos.year}}</text>
  </view>
</view>
<!-- 医院别名 -->
<view class='introduction'>
  <text class='title'>医院别名</text>
  <textarea>{{hos.alias}}(院长:{{hos.dean}})</textarea>
</view>
<!-- 医院介绍 -->
<view class='introduction'>
  <text class='title'>医院介绍</text>
  <textarea>{{hos.info}}</textarea>
</view>
<!-- 地址 -->
<view class='introduction'>
  <text class='title'>医院地址</text>
  <textarea>{{hos.addr}}</textarea>
</view>
<view class='work'>
  <text class='title'>医院资源</text>
  <view class='row'>
    <text class='dot'>●</text>
    <text>医护人数</text>
    <text class='times'>{{hos.personnum}} 人</text>
  </view>
  <view class='row'>
    <text class='dot'>●</text>
    <text>病床数量</text>
    <text class='times'>{{hos.bednum}} 床</text>
  </view>
  <view class='row'>
    <text class='dot'>●</text>
    <text>年门诊量</text>
    <text class='times'>{{hos.yearoutpnum}} 次</text>
  </view>
</view>
<view class='introduction'>
  <!-- <text class='title'>健康证明</text>
  <text class='show'>查看</text> -->
  <text class='title'>科室</text>
  <textarea>{{hos.keshi}}</textarea>
</view>
<view class='comment'>
  <text class='title'>服务评价</text>
  <text class='good'>(好评率85%)</text>
  <text class='total'>25条评论</text>
  <view class='item' wx:for="{{comment}}">
    <view class='row1'>
      <text>张女士</text>
      <view class='hot'>
        <text class="iconfont icon-xingxing"></text>
        <text class="iconfont icon-xingxing"></text>
        <text class="iconfont icon-xingxing"></text>
        <text class="iconfont icon-xingxing"></text>
        <text class="iconfont icon-xingxing"></text>
      </view>
    </view>
    <view class='row2'>
      大幅度发生大幅度发生大幅度发生大幅度发生大幅度发生大幅度发生大幅度发生大幅度发生
    </view>
    <view class='row1'>
      <text>医疗陪护</text>
      <text>2018.6.12</text>
    </view>
  </view>
</view>
<view class='footer'>
  <text class='freeTime' bindtap='freeTime'>空闲日历</text>
  <text class='collect'>加入收藏</text>
  <text class='appointment' bindtap='goDocList'>立即预约</text>
</view>