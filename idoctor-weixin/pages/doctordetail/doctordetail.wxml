<!-- 头部 -->
<view class='header'>
  <image src="{{doc.imgurl}}" />
  <view class='row row1'>
    <text class='name'>{{doc.name}}</text>
    <view class='hot'>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
      <text class="iconfont icon-xingxing"></text>
    </view>
  </view>
  <view class='row row2'>
    <text>{{doc.hospital}}</text>
    <text class='gold'>{{doc.zc}}</text>
  </view>
  <view class='row row3'>
    <text>{{doc.ks}}</text>
  </view>
  <view class='row row4'>
    <text>{{doc.jxzc}}</text>
    <text class='price'>{{doc.xzzc}}</text>
  </view>
</view>
<!-- 医生介绍 -->
<view class='introduction'>
  <text class='title'>医院介绍 </text>
  <textarea>{{doc.introduction}}</textarea>
</view>
<!-- 医生擅长 -->
<view class='introduction'>
  <text class='title'>医生擅长</text>
  <textarea>{{doc.sc}}</textarea>
</view>
<!-- 荣誉 -->
<view class='introduction'>
  <text class='title'>医生荣誉</text>
  <textarea>{{doc.honor}}</textarea>
</view>
<!-- 论文 -->
<view class='introduction'>
  <text class='title'>发布论文</text>
  <textarea>{{doc.paper}}</textarea>
</view>
<!-- 地址 -->
<view class='introduction'>
  <text class='title'>医生地址</text>
  <textarea>{{doc.addr}}</textarea>
</view>
<view class='work'>
  <text class='title'>联系信息</text>
  <view class='row'>
    <text class='dot'>●</text>
    <text>医生主页</text>
    <text class='times'>{{doc.url}}</text>
  </view>
  <view class='row'>
    <text class='dot'>●</text>
    <text>医生电话</text>
    <text class='times'>{{doc.tel}}</text>
  </view>
  <view class='row'>
    <text class='dot'>●</text>
    <text>医生传真</text>
    <text class='times'>{{doc.fax}}</text>
  </view>
  <view class='row'>
    <text class='dot'>●</text>
    <text>医生邮箱</text>
    <text class='times'>{{doc.email}}</text>
  </view>
</view>
<view class='comment'>
  <text class='title'>服务评价</text>
  <text class='good'>(好评率85%)</text>
  <text class='total'>25条评论</text>
  <view class='item' wx:for="{{comment}}">
    <view class='row1'>
      <text>张女士</text>
      <view class='hot'>
        <text class="iconfont icon-xingxing"></text>
        <text class="iconfont icon-xingxing"></text>
        <text class="iconfont icon-xingxing"></text>
        <text class="iconfont icon-xingxing"></text>
        <text class="iconfont icon-xingxing"></text>
      </view>
    </view>
    <view class='row2'>
      大幅度发生大幅度发生大幅度发生大幅度发生大幅度发生大幅度发生大幅度发生大幅度发生
    </view>
    <view class='row1'>
      <text>医疗陪护</text>
      <text>2018.6.12</text>
    </view>
  </view>
</view>
<view class='footer'>
  <text class='freeTime' bindtap='freeTime'>空闲日历</text>
  <text class='collect'>加入收藏</text>
  <text class='appointment' bindtap='orderTap'>立即预约</text>
</view>